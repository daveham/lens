{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "standard",
  "plugins": [
    "babel",
    "jest",
    "promise"
  ],
  "env": {
    "browser": true,
    "jest/globals": true,
    "node": true
  },
  "globals": {
    "io": false,
    "Promise": false,
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "__DEBUG_NEW_WINDOW__": false,
    "__COVERAGE__": false,
    "__BASENAME__": false
  },
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "semi": [2, "always"],
    "padded-blocks": 0,
    "space-before-function-paren": 0,
    "no-console": 0,
    "no-unused-vars": ["error", { "ignoreRestSiblings": true, "varsIgnorePattern": "^[iI]gnored" }],
    "jsx-quotes": [2, "prefer-single"]
  }
}
