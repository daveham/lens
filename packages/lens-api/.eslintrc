{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "babel",
    "promise",
    "flowtype"
  ],
  "env": {
    "node": true
  },
  "globals": {
    "Promise": false
  },
  "rules": {
    "semi": [2, "always"],
    "padded-blocks": 0,
    "space-before-function-paren": 0,
    "jsx-quotes": [2, "prefer-single"],
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "no-console": 0
  }
}
