{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build/dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/@types/react"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "public",
    "scripts",
    "config",
    "node_modules"
  ]
}
