{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "module": "ES6",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": [
      "ES6",
      "ES7",
      "ES2017",
      "DOM"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "public",
    "node_modules"
  ]
}
