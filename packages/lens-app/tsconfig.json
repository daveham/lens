{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build/dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/@types/react"],
      "@src/*": ["src/*"],
      "@config/*": ["config/*"],
      "@containers/*": ["src/containers/*"],
      "@catalog/*": ["src/containers/catalog/*"],
      "@simulation/*": ["src/containers/simulation/*"],
      "@components/*": ["src/components/*"],
      "@modules/*": ["src/modules/*"],
      "@sagas/*": ["src/sagas/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "public",
    "scripts",
    "config",
    "node_modules"
  ]
}
